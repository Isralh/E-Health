import React from 'react'
import { Link } from 'react-router-dom'
import { LinkStyle } from './LinkStyle'
const DropDown = ({ showNavDropDown, showLoginDropDown, handleLoginDropDown, userStatus, userName }) => {
  const loginClassName = ('link', 'logins')
  return (
    <div className='nav-dropdown' style={{ display: showNavDropDown }}>
      <Link to='/' style={LinkStyle} className='link'>Home</Link>
      <Link to='/bookAppointment' style={LinkStyle} className='link'>Book Appointment</Link>
      {userStatus === null && userStatus === undefined
        ? <>
          <a style={LinkStyle} onClick={handleLoginDropDown} className='link'>Login</a>
          <div className='login-dropdown' style={{ display: showLoginDropDown }}>
            <Link to='/provider/login' style={LinkStyle} className={loginClassName}>Provider</Link>
            <Link to='/customer/login' style={LinkStyle} className={loginClassName}>Customer</Link>
          </div>
          </>
        : userStatus.role === 'provider'
          ? <>
            <a style={LinkStyle} onClick={handleLoginDropDown} className='link'>{userName}</a>
            <div className='provider-dropdown' style={{ display: showLoginDropDown }}>
              <Link to='/provider/dashboard' style={LinkStyle} className={loginClassName}>Dashboard</Link>
              <Link to='/provider/profile' style={LinkStyle} className={loginClassName}>Profile</Link>
            </div>
            </>
          : <>
            <a style={LinkStyle} onClick={handleLoginDropDown} className='link'>{userName}</a>
            <div className='customer-dropdown' style={{ display: showLoginDropDown }}>
              <Link to='/customer/dashboard' style={LinkStyle} className={loginClassName}>Dashboard</Link>
              <Link to='/customer/profile' style={LinkStyle} className={loginClassName}>Profile</Link>
            </div>
            </>}
    </div>
  )
};
export default DropDown
